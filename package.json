{
  "name": "piconet",
  "version": "0.1.0",
  "description": "A p2p pico-8 chatroom.",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run dev:web & npm run dev:native",
    "dev:web": "vite",
    "dev:native": "/Applications/pico-8/PICO-8.app/Contents/MacOS/pico8 -run src/piconet.p8",
    "build": "npm run export && tsc && vite build",
    "lint": "eslint --ext ts,tsx --report-unused-disable-directives --max-warnings 0 .",
    "prettier": "prettier --check ./src",
    "prettier:write": "prettier --write ./src",
    "export": "$PICO8_PATH src/piconet.p8 -export src/piconet.js",
    "link:cart": "ln -s \"$(pwd)/src\" $HOME/Library/Application\\ Support/pico-8/carts/piconet"
  },
  "keywords": [
    "pico-8",
    "pico8"
  ],
  "author": "Noman",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@vitejs/plugin-react-swc": "^3.4.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "vite": "^4.5.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "npm run prettier:write"
    ]
  }
}
